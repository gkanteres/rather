<div class="question-tile">
  <div class="options row">
    <h2>Would You Rather?</h2>
    <div class="col-md-4">
      <h3><%= link_to question.answers.first.content, answer_path(question.answers.first), remote: true, method: "patch", cache: false, class: "response" %></h3>
    </div>
    <div class="col-md-4">
      <h3>OR</h3>
    </div>
    <div class="col-md-4">
      <h3><%= link_to question.answers.last.content, answer_path(question.answers.last), remote: true, method: "patch", cache: false, class: "response" %></h3>
    </div>
  </div>
  <div class="vote-results"></div>
  <%= link_to "edit",  edit_question_path(question), class: "btn btn-warning", remote: true %>
  <%= link_to "delete",  question_path(question), class: "btn btn-warning", remote: true, method: "delete" %>
</div>
