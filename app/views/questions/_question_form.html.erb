<%= form_for question, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :content, "What's your question" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create a Question", class: "btn btn-success" %>
  </div>
<% end %>
